{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@ctx/*": ["./ctx/*"],
      "@src/*": ["./*"],
      "@svg/*": ["./svg/*"],
      "@ui/*": ["./ui/*"],
      "@utils/*": ["./utils/*"],
      "@vlc/*": ["./vlc/*"],
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}
